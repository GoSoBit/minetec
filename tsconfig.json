{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2017",
    "noImplicitAny": true,
    "sourceMap": true,
    "strict": true,
    "outDir": "out",
    "jsx": "react"
  },
  "exclude": [
    "dist",
    "out",
    "node_modules",
    "app/node_modules"
  ],
  "include": [
    "app/**/*.ts",
    "app/**/*.tsx"
  ],
  "compileOnSave": false
}
